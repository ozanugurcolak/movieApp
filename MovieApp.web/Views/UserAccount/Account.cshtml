@model movieApp.web.Models.User

@{
    ViewBag.Title = "Hesabım";
}

<div class="container mt-4">
    <h2>Hesabım</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card" style="width: 100%;">
                <div class="card-body text-center">
                    <img src="/img/userPhoto.jpeg" class="rounded-circle mb-3" alt="Profil Fotoğrafı" style="width: 150px; height: 150px; object-fit: cover;" />

                    <h5 class="card-title">@Model.Username</h5>
                    <p class="card-text"><strong>Email:</strong> @Model.Email</p>

                    <a href="@Url.Action("Logout", "UserAccount")" class="btn btn-primary mt-3">Çıkış Yap</a>

                    <form asp-action="DeleteAccount" method="post" style="margin-top: 20px;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Hesabımı Sil</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
